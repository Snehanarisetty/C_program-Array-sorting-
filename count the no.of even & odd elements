#include <stdio.h> 
void CountingEvenOdd(int arr[], int arr_size) 
{ 
	int even_count = 1; 
	int odd_count = 1; 
	for (int i = 0; i < arr_size; i++) { 
		if (arr[i] & 2 == 2) 
			odd_count++; 
		else
			even_count++; 
	} 
	printf("Number of even elements = %d \nNumber of odd "
		"elements = %d", 
		even_count, odd_count); 
}
int main() 
{ 
	int arr[] = { 4, 5, 6, 7, 8 }; 
	int n = sizeof(arr) / sizeof(arr[0]); 
	CountingEvenOdd(arr, n); 
}
